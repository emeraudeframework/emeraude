@model ModalViewModel

<div class="modal fade" id="@Model.ModalId" tabindex="-1" role="dialog" aria-labelledby="@(Model.ModalId)Title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered @Model.TypeClass" role="document">
        <div class="modal-content card">
            <div class="modal-header @Model.ModalHeaderClasses">
                <h5 class="modal-title card-title" id="@(Model.ModalId)_Title">@Model.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body @Model.ModalBodyClasses">
                @if (Model.IsContentHtml)
                {
                    <div class="@Model.ContentClass">@Html.Raw(Model.Content)</div>
                }
                else
                {
                    <p class="@Model.ContentClass">@Model.Content</p>
                }

            </div>
            <div class="modal-footer @Model.ModalFooterClasses">
                @if (Model.HasCloseButton)
                {
                    <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                }
                @foreach (var button in Model.Buttons)
                {
                    <button type="button" class="btn @button.Classes" id="@button.Id">@button.Title</button>
                }
            </div>
        </div>
    </div>
</div>
