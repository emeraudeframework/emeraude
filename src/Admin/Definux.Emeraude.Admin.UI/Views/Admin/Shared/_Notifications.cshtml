@{
    string successNotificationMessage = string.Empty;
    bool hasSuccessNotification = TempData.TryGetSuccessMessage(out successNotificationMessage);

    string errorNotificationMessage = string.Empty;
    bool hasErrorNotification = TempData.TryGetErrorMessage(out errorNotificationMessage);
}
@if (hasSuccessNotification || hasErrorNotification)
{
    <div class="w-100 px-3 py-2 float-left">
        @if (hasSuccessNotification)
        {
            <notification-alert type="success">@successNotificationMessage</notification-alert>
        }
        @if (hasErrorNotification)
        {
            <notification-alert type="danger">@errorNotificationMessage</notification-alert>
        }
    </div>
}