<tbody>
    @foreach (var row in Rows)
    {
        <tr>
            @foreach (var cell in row.Cells)
            {
                <td class="px-2 py-0 text-left">
                    <DynamicComponent Type="cell.Component" Parameters="GetParameters(cell)"/>
                </td>
            }
            @if (HasActions)
            {
                var orderedActions = row.Actions.OrderBy(x => x.Order);
                <div class="d-flex px-1">
                    @foreach (var action in orderedActions)
                    {
                        <EmEntityTableRowAction Action="action"/>
                    }
                </div>
            }
        </tr>
    }
</tbody>

@code {
    [Parameter]
    public IEnumerable<EntityTableRowModel> Rows { get; set; }
    
    [Parameter]
    public bool HasActions { get; set; }

    private Dictionary<string, object> GetParameters(EntityTableCellModel cellModel)
    {
        return new()
        {
            { "Value", cellModel.Value },
            { "Property", cellModel.Property },
            { "Type", cellModel.Type }
        };
    }
}