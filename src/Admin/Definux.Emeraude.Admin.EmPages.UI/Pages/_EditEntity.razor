@page "/admin/{route}/{modelId}/edit"
@inherits EmPage

<PageTitle>@PageTitle | Emeraude</PageTitle>
<EmPageFormView ViewSchema="ViewSchema" ViewData="ViewData"/>

@code {
    [Parameter]
    public string ModelId { get; set; }
    
    private EmPageFormViewSchema ViewSchema { get; set; }
    
    private EmPageFormViewData ViewData { get; set; }

    private string PageTitle => ViewSchema?.Context.Title;

    protected override IEnumerable<BreadcrumbItemModel> ConfigureBreadcrumbs()
        => ViewSchema?.Context.Breadcrumbs ?? new List<BreadcrumbItemModel>();

    protected override IEnumerable<ActionModel> ConfigureNavigationActions()
        => ViewSchema?.Context.NavbarActions ?? new List<ActionModel>();
    
    protected override async Task ReloadPageAsync()
    {
        ViewSchema = await SchemaProvider.GetFormViewSchemaAsync(EmPageFormType.EditForm, Route);
        StateHasChanged();
        if (ViewSchema == null)
        {
            NavigationManager.NavigateToNotFoundPage();
            return;
        }
        
        ViewData = await DataService.RetrieveFormViewDataAsync(EmPageFormType.EditForm, Route, ModelId, GetQueryParameters(), ViewSchema);
        StateHasChanged();
    }

}