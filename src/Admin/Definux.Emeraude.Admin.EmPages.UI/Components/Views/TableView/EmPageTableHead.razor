<thead class="text-left">
    <tr>
        @foreach (var cell in Model.Cells)
        {
            <th class="p-2 h-auto">@cell.Name</th>
        }
        @if (HasActions)
        {
            <th class="p-2 h-auto fit">Actions</th>
        }
    </tr>
</thead>

@code {
    [Parameter]
    public EmPageTableHeadModel Model { get; set; }

    [Parameter]
    public bool HasActions { get; set; }
}